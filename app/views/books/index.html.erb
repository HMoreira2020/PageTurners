
<h3>Search Books</h3>
<%= form_tag books_path, method: :get do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Books By Title"  %> 
  <%= submit_tag ("Search") %> 
<%end%> <br>


<% @books.each do |b| %>
  <%= render partial: 'books', locals: {book: b} %>
<% end %> 


<%= link_to "Add a New book", new_book_path %> <br> 
