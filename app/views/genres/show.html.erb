<h1>Genres < <%=@genre.name%> Books</h1>
<% if policy(@genre).update? %> 
    <%= link_to "Edit Genre", edit_genre_path(@genre) %> 
<% end %>
<% if @genre.books.empty? %>
    There are no Books in this Genre yet 
<%else%>
<ul>
<% @genre.books.each do |book| %>
    <li><%= link_to book.title, book_path(book) %> by <%= book.author %><br>
    <strong>Synopsis: </strong> <%= book.synopsis %></li>
<%end%>
</ul>
<%end%>

