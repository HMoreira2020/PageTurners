<!DOCTYPE html>
<html>
  <head>
    <title>PageTurners</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <a class="navbar-brand" href="<%= root_path %>"/>Home</a>
    
    <% if logged_in? %> 
      <a class="navbar-brand" href="<%=user_path(current_user)%>"/><%=current_user.name%>'s profile</a>
      <%= link_to "Log Out", logout_path, class: "navbar-brand" %>
    <%else%>
      <a class="navbar-brand" href="<%= new_user_path %>"/>Sign Up</a>
      <a class="navbar-brand" href="<%= signin_path %>"/>Login</a>
    <%end%>
    
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
<%= alert %>
<!-- content -->
<div class="container"  role="main">

  <%= yield %>

</div>
  </body>
</html>
