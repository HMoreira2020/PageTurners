<%= render "errors/error", model: book %>

<%= form_for book do |f| %> 
    <div class="form-group">
        <%= f.label :title %> 
        <%= f.text_field :title, class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :author %> 
        <%= f.text_field :author, class: "form-control"  %><br>
    </div>

    <div class="form-group">
        <%= f.label :synopsis %> 
        <%= f.text_field :synopsis, class: "form-control"  %><br> 
    </div>

    <div class="form-group">   
        <%= f.label :genre %> 
        <%= f.collection_select :genre_id, Genre.all, :id, :name %><br> 
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
    </div>

<%end%>