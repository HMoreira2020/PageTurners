<h1><%=@book.title%></h1>

<div>
    <%= render partial: 'books', locals: {book: @book} %>
</div><br>


<%=form_for @book do |f| %>
    <%= f.collection_select :lists, current_user.lists, :id, :title, {:prompt => 'Add this Book to a List' } %> 
    <%= f.submit "Add to List" %>
<%end%><br>


<%= link_to "Write a Review", new_book_review_path(@book) %> 
<h3>Reviews</h3> 
<%= @book.reviews.count %> reviews<br> 

<% @reviews.each do |review| %> 
    <strong><%= link_to review.user.username, user_path(review.user) %></strong> rated it <%= stars(review.stars) %> stars - <%=review_date(review.created_at)%><br>
    <%= review.content %><br> 
<%= link_to "see more", review_path(review) %><br><br>
<%end%>


