<div class="title-container">
<h2>Readers</h2>
</div>

<div class="users">  
  <% @users.each do |user| %>
    <div class="user">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to user.username, user_path(user) %></h3>
            <% if user.lists.present? %>
            <div class="lists">
              <ul>
                <% user.lists.each do |list| %> 
                  <li><%= link_to list.title, user_list_path(user, list) %> </li>
                <%end%>
              </ul>
              <%else%>
                <ul>
                  <li>No Lists yet
                </ul>
            <%end%>
        </div>
      </div>
    </div>
  <%end%>



