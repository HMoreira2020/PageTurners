<!DOCTYPE html>
<html>
  <head>
    <title>PageTurners</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    <%= link_to "PageTurners", class: "navbar-brand" %>
    <%= link_to "Home", root_path, class: "navbar-brand" %>
    
    <% if logged_in? %> 
      <%= link_to "Profile", user_path(current_user), class: "navbar-brand" %>
      <div class="dropdown">
        <button class="dropbtn">Browse
      <i class="fa fa-caret-down"></i>
      </button>
      <div class="dropdown-content">
      <%= link_to "Books", books_path, class: "navbar-brand" %>
      <%= link_to "Community", users_path, class: "navbar-brand" %>
      <%= link_to "Genres", genres_path, class: "navbar-brand" %>
      <%= link_to "Recommended", recommended_path, class: "navbar-brand" %>
      </div>
    </div>
  
      
      <%= link_to "Log Out", logout_path, class: "navbar-brand" %>
    <%else%>
      <%= link_to "Sign Up", new_user_path, class: "navbar-brand" %>
      <%= link_to "Login", login_path, class: "navbar-brand" %>
    <%end%>
    
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>


<% flash.each do |k, v| %>
  <div class=<%= k %> ><%= v %></div>
<% end %>

<!-- content -->
<div class="container"  role="main">

  <%= yield %>

<footer>
<% if logged_in? %>
  <% if current_user.username != nil %>
    <h4>You are signed in as <%= current_user.username %></h4>
  <%else%>
    <h4>You are signed in as <%= current_user.name %></h4>
  <%end%>
<%end%>
</footer>

</div>
  </body>
</html>
