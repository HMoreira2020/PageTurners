<div class="title-container">
<h1>Genres < <%=@genre.name%> < Books</h1>
<% if policy(@genre).update? %> 
<div class="admin">
    <%= link_to "Edit Genre", edit_genre_path(@genre), class: "btn btn-default"  %> 
<% end %>
</div>
</div>


<% if @genre.books.empty? %> 
<div>0 Books in this Genre </div>
<%else%> 
<div class="books">  
  <% @genre.books.each do |b| %>
    <div class="book">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= link_to truncate(b.title), book_path(b) %></h3>
          <p><%= render partial: 'books/books', locals: {book: b} %></p>
          <p><%= link_to "See more", book_path(b), class: "btn btn-default"  %></p>
        </div>
      </div>
    </div>
  <%end%>
<% end %> 
