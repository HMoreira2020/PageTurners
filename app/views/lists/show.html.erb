<div class="title-container">
    <h1><%= @list.user.username%> < Lists < "<%= @list.title %>"</h1>
    <div class="user-actions">
        <% if policy(@list).update? && policy(@list).destroy? %>
            <%= link_to "Edit List", edit_list_path(@list), class: "btn btn-primary" %>
            <%= form_tag list_path(@list), method: "delete" do %>
                <%= submit_tag "Delete List",  class: "btn btn-primary" %>
            <% end %>
        <%end%>
    </div>
</div>


<% if @list.books.empty? %> 
    <div><%= link_to "Add a Book", books_path%> </div>
  <%else%> 
    <div class="books">  
      <% @list.books.each do |b| %>
        <div class="book">
          <div class="thumbnail">
            <div class="caption">
              <h3><%= link_to b.title, book_path(b) %></h3>
              <p><%= render partial: 'books/books', locals: {book: b} %></p>
              <p><%= link_to "See more", book_path(b), class: "btn btn-default"  %></p>
            </div>
          </div>
        </div>
      <%end%>
  <% end %> 
</div>






